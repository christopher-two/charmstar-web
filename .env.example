# Firebase Configuration - PUBLIC (needed in frontend)
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_firebase_auth_domain
VITE_FIREBASE_PROJECT_ID=your_firebase_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_firebase_storage_bucket
VITE_FIREBASE_MESSAGING_SENDER_ID=your_firebase_messaging_sender_id
VITE_FIREBASE_APP_ID=your_firebase_app_id

# Cloudflare R2 Configuration - PUBLIC INFO ONLY
# Note: Sensitive credentials (ACCESS_KEY_ID, SECRET_ACCESS_KEY) 
# are kept private on server and NEVER exposed to frontend
VITE_R2_BUCKET_NAME=your_r2_bucket_name
VITE_R2_PUBLIC_ENDPOINT=https://your_public_r2_endpoint.com

# Cloudflare R2 Configuration - PRIVATE (server only)
# These are used in /api/upload-url.ts and should NOT have VITE_ prefix
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# Admin Configuration
VITE_ADMIN_DEFAULT_EMAIL=admin@charmstar.com
